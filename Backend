@app.route('/company-signup', methods=['POST'])
def company_signup():
    company_name = request.form.get('company_name')
    company_email = request.form.get('company_email')
    company_password = request.form.get('company_password')
    
    # Check if the required fields are filled
    if not company_name or not company_email or not company_password:
        return jsonify({'success': False, 'message': 'Missing required fields'})

    # Hash the password
    hashed_password = generate_password_hash(company_password)

    # Database connection
    conn = get_db_connection()
    cursor = conn.cursor()

    try:
        # Insert into company table
        cursor.execute('''
            INSERT INTO company (company_name, type, company_size, description, company_logo_URL, company_email, company_password)
            VALUES (%s, %s, %s, %s, %s, %s, %s)
        ''', (company_name, request.form['type'], request.form['company_size'], request.form['description'], 
              request.form.get('company_logo_URL', ''), company_email, hashed_password))
        
        # Commit changes to database
        conn.commit()
        cursor.close()
        conn.close()

        return jsonify({'success': True, 'message': 'Company successfully registered!'})
    
    except mysql.connector.Error as err:
        # Log and return the error
        print(f"Error: {err}")
        return jsonify({'success': False, 'message': 'An error occurred while registering the company.'})

    except Exception as e:
        # Catch other exceptions
        print(f"General error: {e}")
        return jsonify({'success': False, 'message': 'An unexpected error occurred.'})

