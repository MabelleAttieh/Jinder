@app.route('/company-login', methods=['POST'])
def company_login():
    try:
        # Get form data
        email = request.form.get('email', '').strip().lower()
        password = request.form.get('password', '').strip()

        # Validate inputs
        if not email or not password:
            return jsonify({'success': False, 'message': 'Email and password are required'}), 400

        cur = mysql.connection.cursor()

        # Find company by email
        cur.execute("""
            SELECT company_id, company_name, company_email, company_password,
                   company_logo_URL, type, company_size
            FROM company 
            WHERE company_email = %s
        """, (email,))
        
        company = cur.fetchone()
        cur.close()

        # Company not found
        if not company:
            return jsonify({'success': False, 'message': 'Invalid credentials'}), 401

        # Verify password
        if not bcrypt.checkpw(password.encode('utf-8'), company[3].encode('utf-8')):
            return jsonify({'success': False, 'message': 'Invalid credentials'}), 401

        # Prepare response
        company_data = {
            'company_id': company[0],
            'company_name': company[1],
            'email': company[2],
            'logo_url': company[4],
            'industry': company[5],
            'size': company[6]
        }

        return jsonify({
            'success': True,
            'message': 'Login successful',
            'company': company_data,
            'redirect': '/company-dashboard.html'
        })

    except Exception as e:
        return jsonify({
            'success': False,
            'message': 'Server error during login',
            'error': str(e)
        }), 500

if __name__ == '__main__':
    app.run(debug=True)

